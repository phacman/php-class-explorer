{
    "name": "phacman/php-class-explorer",
    "type": "library",
    "description": "Exploring a class file without loading and creating an object.",
    "keywords": ["php", "class", "explorer", "analyzer", "analysis"],
    "homepage": "https://github.com/phacman/php-class-explorer",
    "license" : "MIT",
    "authors": [
        {
            "name": "Pavel Vasin",
            "email": "phacman@yandex.ru",
            "homepage": "https://phacman.ru"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "format-code": "php-cs-fixer fix --allow-risky=yes"
    },
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4",
        "friendsofphp/php-cs-fixer": "^3.37",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "PhacMan\\ClassExplorer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhacMan\\ClassExplorer\\Tests\\": "tests/"
        }
    }
}
